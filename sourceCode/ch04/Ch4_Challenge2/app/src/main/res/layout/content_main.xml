<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.brysonpayne.guessinggame.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dr. Payne&apos;s Guessing Game"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="Enter a number, then click Guess!"
        android:id="@+id/lblOutput"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnGuess"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess!"
        android:id="@+id/btnGuess"
        android:layout_alignBottom="@+id/txtGuess"
        android:layout_toRightOf="@+id/txtGuess"
        android:layout_toEndOf="@+id/txtGuess"
        android:layout_alignTop="@+id/txtGuess"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:background="@android:color/holo_green_light"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a number between 1 and 100:"
        android:id="@+id/textView2"
        android:layout_marginTop="34dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:lines="3"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtGuess"
        android:layout_marginTop="49dp"
        android:width="75dp"
        android:text="50"
        android:linksClickable="false"
        android:numeric="integer"
        android:gravity="center_horizontal"
        android:textSize="36sp"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

</RelativeLayout>
</android.support.constraint.ConstraintLayout>
